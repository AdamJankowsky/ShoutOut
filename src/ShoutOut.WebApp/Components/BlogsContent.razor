@inject PostsService PostsService;


<MudContainer MaxWidth="MaxWidth.Large">

    @foreach (var post in posts)
    {
        <BlogPost Content="@post.Content" Username="@post.Author" PostDate="@post.DateAdded"/>
    }

</MudContainer>


@code {

    Database.Entities.BlogPost[] posts = [];

    protected override async Task OnParametersSetAsync()
    {
        posts = await PostsService.GetAsync();
    }

}